    <%# form.number_field :player_id, id: :role_player_id %>
  </div>

  <div class="field">
    <%= form.label :captain %>
    <%= form.check_box :captain, id: :role_captain %>
  </div>

  <div class="field">
    <%= form.label :goalkeeper %>
    <%= form.check_box :goalkeeper, id: :role_goalkeeper %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
